# Environment Configuration
# Copy this file to .env and update values

# Application
APP_NAME=Responsible AI Governance System
APP_VERSION=1.0.0
DEBUG=true

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database
DATABASE_URL=sqlite+aiosqlite:///./governance.db

# AWS (optional - uses mock clients if not configured)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ai-governance-models
CLOUDWATCH_LOG_GROUP=/ai-governance/predictions

# Model Configuration
MODEL_PATH=./models/healthcare_model.pt
MODEL_VERSION=1.0.0

# Governance
AUDIT_LOG_RETENTION_DAYS=2555
BIAS_THRESHOLD=0.1

# Monitoring
PREDICTION_BATCH_SIZE=1000
METRICS_INTERVAL_SECONDS=60
